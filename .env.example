# Application
APP_NAME=xonvera
APP_VERSION=1.0.0
APP_PORT=3000
APP_ENV=development
APP_REQUEST_TIMEOUT=30s

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=xonvera_db
DB_SSLMODE=disable

# Database Connection Pool Settings
DB_OPT_MAX_IDLE_CONN=10
DB_OPT_MAX_OPEN_CONN=100
DB_OPT_CONN_MAX_IDLE_TIME=10m
DB_OPT_CONN_MAX_LIFE_TIME=1h

# Redis (for rate limiting, token storage, and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Token (PASETO) - Secret key must be at least 32 characters
TOKEN_SECRET_KEY=change-this-to-your-secret-key-32ch
TOKEN_EXPIRE=24h
TOKEN_REFRESH_EXPIRE=168h